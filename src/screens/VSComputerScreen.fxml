<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.Pane?>

<BorderPane style="-fx-background-color: #000924;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="screens.VSComputerScreenController">

   <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <top>
        <HBox alignment="CENTER" spacing="20">
            <!-- Player 1 Info -->
            <VBox alignment="CENTER" minWidth="80" prefWidth="100" spacing="2" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 10;">
                <padding>
                    <Insets bottom="5" left="10" right="10" top="5" />
                </padding>
                <Text fx:id="player1Name" fill="AQUA" text="Player 1">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Text>
                <Text fill="WHITE" text="X">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Text>
            </VBox>
         
            <!-- Current Turn Indicator -->
            <VBox alignment="CENTER" prefHeight="93.0" prefWidth="79.0" spacing="2">
                <Text fill="AQUA" text="Current Turn">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Text>
                <Text fx:id="currentSymbol" fill="WHITE" text="X">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Text>
            </VBox>
         
            <!-- Player 2 Info -->
            <VBox alignment="CENTER" minWidth="80" prefWidth="100" spacing="2" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 10;">
                <padding>
                    <Insets bottom="5" left="10" right="10" top="5" />
                </padding>
                <Text fx:id="player2Name" fill="AQUA" text="Player 2">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Text>
                <Text fill="WHITE" text="O">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Text>
            </VBox>
        </HBox>
    </top>
    <center>
        <Pane fx:id="gamePane" style="-fx-background-color: rgba(255,255,255,0.1); ">
            <children>
                <GridPane alignment="CENTER" hgap="5" style="-fx-background-color: rgba(255,255,255,0.15); -fx-background-radius: 10;" vgap="5">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
                    <columnConstraints>
                        <ColumnConstraints percentWidth="33.33" />
                        <ColumnConstraints percentWidth="33.33" />
                        <ColumnConstraints percentWidth="33.33" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints percentHeight="33.33" />
                        <RowConstraints percentHeight="33.33" />
                        <RowConstraints percentHeight="33.33" />
                    </rowConstraints>
                    <children>
                        <!-- Row 1 (0) -->
                        <Button fx:id="buttonOne" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#buttonOneHandler" prefHeight="100.0" prefWidth="100.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, #ff00ff, 20, 0.5, 0, 0); -fx-border-color: white; -fx-border-width: 2; -fx-border-radius: 0; -fx-opacity: 1;" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <font>
                                <Font name="System Bold" size="48.0" />
                            </font>
                        </Button>
                        <Button fx:id="buttonTwo" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#buttonTwoHandler" prefHeight="100.0" prefWidth="100.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, #ff00ff, 20, 0.5, 0, 0); -fx-border-color: white; -fx-border-width: 2; -fx-border-radius: 0; -fx-opacity: 1;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <font>
                                <Font name="System Bold" size="48.0" />
                            </font>
                        </Button>
                        <Button fx:id="buttonThree" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#buttonThreeHandler" prefHeight="100.0" prefWidth="100.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, #ff00ff, 20, 0.5, 0, 0); -fx-border-color: white; -fx-border-width: 2; -fx-border-radius: 0; -fx-opacity: 1;" GridPane.columnIndex="2" GridPane.rowIndex="0">
                            <font>
                                <Font name="System Bold" size="48.0" />
                            </font>
                        </Button>

                        <!-- Row 2 (1) -->
                        <Button fx:id="buttonFour" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#buttonFourHandler" prefHeight="100.0" prefWidth="100.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, #ff00ff, 20, 0.5, 0, 0); -fx-border-color: white; -fx-border-width: 2; -fx-border-radius: 0; -fx-opacity: 1;" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <font>
                                <Font name="System Bold" size="48.0" />
                            </font>
                        </Button>
                        <Button fx:id="buttonFive" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#buttonFiveHandler" prefHeight="100.0" prefWidth="100.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, #ff00ff, 20, 0.5, 0, 0); -fx-border-color: white; -fx-border-width: 2; -fx-border-radius: 0; -fx-opacity: 1;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <font>
                                <Font name="System Bold" size="48.0" />
                            </font>
                        </Button>
                        <Button fx:id="buttonSix" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#buttonSixHandler" prefHeight="100.0" prefWidth="100.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, #ff00ff, 20, 0.5, 0, 0); -fx-border-color: white; -fx-border-width: 2; -fx-border-radius: 0; -fx-opacity: 1;" GridPane.columnIndex="2" GridPane.rowIndex="1">
                            <font>
                                <Font name="System Bold" size="48.0" />
                            </font>
                        </Button>

                        <!-- Row 3 (2) -->
                        <Button fx:id="buttonSeven" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#buttonSevenHandler" prefHeight="100.0" prefWidth="100.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, #ff00ff, 20, 0.5, 0, 0); -fx-border-color: white; -fx-border-width: 2; -fx-border-radius: 0; -fx-opacity: 1;" GridPane.columnIndex="0" GridPane.rowIndex="2">
                            <font>
                                <Font name="System Bold" size="48.0" />
                            </font>
                        </Button>
                        <Button fx:id="buttonEight" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#buttonEightHandler" prefHeight="100.0" prefWidth="100.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, #ff00ff, 20, 0.5, 0, 0); -fx-border-color: white; -fx-border-width: 2; -fx-border-radius: 0; -fx-opacity: 1;" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <font>
                                <Font name="System Bold" size="48.0" />
                            </font>
                        </Button>
                        <Button fx:id="buttonNine" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" onAction="#buttonNineHandler" prefHeight="218.0" prefWidth="234.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, #ff00ff, 20, 0.5, 0, 0); -fx-border-color: white; -fx-border-width: 2; -fx-border-radius: 0; -fx-opacity: 1;" GridPane.columnIndex="2" GridPane.rowIndex="2">
                            <font>
                                <Font name="System Bold" size="48.0" />
                            </font>
                        </Button>
                    </children>
                </GridPane>
            </children>
        </Pane>
    </center>
    
  <bottom>
        <VBox alignment="CENTER" spacing="10">
                                       

            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="backButton" onAction="#goBack" prefHeight="30.0" prefWidth="120.0" style="-fx-background-color: #000924; -fx-border-color: #ff00ff; -fx-border-radius: 15; -fx-text-fill: #00ffff;">
                    <graphic>
                        <HBox alignment="CENTER" spacing="5">
                            <SVGPath content="M15.41 16.59L10.83 12l4.58-4.59L14 6l-6 6 6 6z" fill="#00ffff" />
                            <Text fill="#00ffff" text="Back">
                                <font>
                                    <Font size="18.0" />
                                </font>
                            </Text>
                                                    
                        </HBox>
                    </graphic>
                </Button>
                <Button fx:id="restartButton" onAction="#restartButtonHandler" prefHeight="30.0" prefWidth="120.0" style="-fx-background-color: #000924; -fx-border-color: #ff00ff; -fx-border-radius: 15; -fx-text-fill: #00ffff;">
                    <graphic>
                        <HBox alignment="CENTER" spacing="5">
                            <Text fill="#00ffff" text="Restart">
                                <font>
                                    <Font size="18.0" />
                                </font>
                            </Text>
                            <SVGPath content="M12 4V1L8 5l4 4V6c3.31 0 6 2.69 6 6 0 1.01-.25 1.97-.7 2.8l1.46 1.46C19.54 15.03 20 13.57 20 12c0-4.42-3.58-8-8-8zm0 14c-3.31 0-6-2.69-6-6 0-1.01.25-1.97.7-2.8L5.24 7.74C4.46 8.97 4 10.43 4 12c0 4.42 3.58 8 8 8v3l4-4-4-4v3z" fill="#00ffff" />
                        </HBox>
                    </graphic>
                </Button>
                                                                                                                        
                <Button fx:id="recordButton" onAction="#recordButtonHandler" prefHeight="30.0" prefWidth="120.0" style="-fx-background-color: #000924; -fx-border-color: #ff00ff; -fx-border-radius: 15; -fx-text-fill: #00ffff;">
                    <graphic>
                        <HBox alignment="CENTER" spacing="5">
                            <Text fill="#00ffff" text="Start Recording">
                                <font>
                                    <Font size="18.0" />
                                </font>
                            </Text>
                            <SVGPath content="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-2-12v8l6-4z" fill="#00ffff" />
                        </HBox>
                    </graphic>
                </Button>
                
            </HBox>
        </VBox>
    </bottom>
</BorderPane>