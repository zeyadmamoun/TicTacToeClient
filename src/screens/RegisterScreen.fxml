<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>


<Pane prefHeight="688.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="screens.RegisterScreenController">
   <children>
      <ImageView fitHeight="711.0" fitWidth="1000.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="/assets/background.png" />
         </image>
      </ImageView>
      <AnchorPane id="AnchorPane" fx:id="anchorPane" layoutY="1.0" prefHeight="654.0" prefWidth="567.0" styleClass="mainFxmlClass">
      
          
          <children>
      
            <!-- Username Label -->
            <Label layoutX="236.0" layoutY="327.0" text="Username" textFill="#fe78cd">
               <font>
                  <Font size="24.0" />
               </font>
               <effect>
                  <DropShadow color="#E1F5FE" offsetX="6" offsetY="6" radius="30" />
               </effect>
            </Label>
      
            <!-- Password Label -->
            <Label fx:id="passssw" layoutX="240.0" layoutY="381.0" text="Password" textFill="#fe78cd">
               <font>
                  <Font size="24.0" />
               </font>
               <effect>
                  <DropShadow color="#E1F5FE" offsetX="6" offsetY="6" radius="30" />
               </effect>
            </Label>
      
            <!-- Confirm Password Label -->
            <Label layoutX="187.0" layoutY="432.0" text="Confirm Password" textFill="#fe78cd">
               <font>
                  <Font size="22.0" />
               </font>
               <effect>
                  <DropShadow color="#E1F5FE" offsetX="6" offsetY="6" radius="30" />
               </effect>
            </Label>
      
            <!-- TextFields for user input -->
            <TextField fx:id="user_signup_f" layoutX="376.0" layoutY="332.0" prefHeight="31.0" prefWidth="276.0" style="-fx-background-color: transparent; -fx-background-radius: 10px; -fx-border-color: #fe78cd; -fx-border-width: 2px; -fx-border-radius: 10px; -fx-text-fill: #ffffff; -fx-border-style: dashed;" />
            <PasswordField fx:id="password_signup_f" layoutX="376.0" layoutY="383.0" prefHeight="31.0" prefWidth="276.0" style="-fx-background-color: transparent; -fx-background-radius: 10px; -fx-border-color: #fe78cd; -fx-border-width: 2px; -fx-border-radius: 10px; -fx-text-fill: #ffffff; -fx-border-style: dashed;" />
      
            <!-- Already have an account text -->
            <Label fx:id="result_signup1" layoutX="343.0" layoutY="606.0" text="You have already an account?" textFill="#E1F5FE">
               <effect>
                  <DropShadow color="#E1F5FE" offsetX="6" offsetY="6" radius="30" />
               </effect>
            </Label>
      
            <!-- Login Button -->
            <Button fx:id="login_btn_s" layoutX="508.0" layoutY="595.0" mnemonicParsing="false" onAction="#switchToLogin" style="-fx-background-radius: 10px; -fx-border-radius: 10px; -fx-background-color: transparnt; -fx-border-color: transparnt;" text="Login" textFill="#E1F5FE" AnchorPane.bottomAnchor="20.0">
               <effect>
                  <DropShadow color="#E1F5FE" offsetX="4" offsetY="4" radius="20" />
               </effect>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
      
            <!-- Sign Up Button -->
            <Button fx:id="signup_btn_s" layoutX="415.0" layoutY="492.0" mnemonicParsing="false" onAction="#signUp" prefHeight="35.0" prefWidth="198.0" style="-fx-background-color: #00d4ff; -fx-border-color: #00d4ff; -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-font-weight: bold; -fx-font-size: 20px;" text="Sign Up" textFill="WHITE">
               <effect>
                  <DropShadow color="#E1F5FE" offsetX="4" offsetY="4" radius="20" />
               </effect>
            </Button>
            <PasswordField fx:id="c_password_signup_f" layoutX="376.0" layoutY="432.0" prefHeight="31.0" prefWidth="276.0" style="-fx-background-color: transparent; -fx-background-radius: 10px; -fx-border-color: #fe78cd; -fx-border-width: 2px; -fx-border-radius: 10px; -fx-text-fill: #ffffff; -fx-border-style: dashed;" />
            
      
         </children>
      
      </AnchorPane>


   </children>
</Pane>
